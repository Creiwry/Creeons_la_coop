<div class="form-default mt-4">
  <%= form_with model: mission, local: true do |f| %>
  <div class="col">
    <div class="col-lg-12">
      <div class="field">
      <%= f.label :name, "Nom de la mission" %><br />
      <%= f.text_field :name, class: "form-control form-control-lg" %>
      </div><br />
      
      <div class="field">
        <%= f.label :description, "Description" %><br />
        <%= f.text_area :description, class: "form-control form-control-lg" %>
      </div><br />
      
      <div class="field my-3">
       <%= f.label :recurrent, "Mission regulière?" %>
       <%= f.check_box :recurrent %>
      </div>
      
      <div class="field">
       <%= f.label :start_date, "Date de début" %>
       <%= f.datetime_field :start_date, class: "form-control form-control-lg" %>
      </div>
      
      <div class="field">
        <%= f.label :due_date, "Date limite" %><br />
        <%= f.datetime_field :due_date, class: "form-control form-control-lg" %>
      </div> 
    </div>
  </div>
  <br />
  
  <h4>Adresses optionnelles</h4>
    <%= f.fields_for :addresses, mission.addresses do |address| %>
    <div class="col">
      <div class="col-lg-12">
        <div class="field">
          <%= address.label :street_name_1, "N° et nom de voie" %><br />
          <%= address.text_field :street_name_1, class: "form-control form-control-lg" %><br />
        </div>
      </div>
      <div class="col-lg-12">
        <div class="field">
          <%= address.label :street_name_2, "Complément d'adresse" %><br />
          <%= address.text_field :street_name_2, class: "form-control form-control-lg" %><br />
        </div>
      </div>
      <div class="col-lg-12">
        <div class="field">
          <%= address.label :postal_code, "Code postal" %><br />
          <%= address.text_field :postal_code, class: "form-control form-control-lg" %><br />
        </div>
      </div>
      <div class="col-lg-12">
        <div class="field">
          <%= address.label :city, "Ville" %><br />
          <%= address.text_field :city, class: "form-control form-control-lg" %><br />
        </div>
      </div>
    </div>
    <% end %>

  <div class="actions">
    <%= f.submit "Valider", class: "btn-update btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
  <% end %>
  </div>
</div>