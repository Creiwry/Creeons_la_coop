<div class="body-wrap">
  <section class="slice sct-color-2">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card form-card form-card--style-1">
            <div class="form-header text-center">
              <div class="form-header-icon">
                  <i class="fas fa-calendar-alt fa-3x"></i>
              </div>
            </div>
            <div class="form-body">
              <div class="text-center px-2">
                <h4 class="heading heading-4 strong-400 mb-0"><h2>Editer Mission</h2></h4>
              </div>

              <div class="form-default mt-4">

                <%= form_with model: @mission, local: true do |f| %>
                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                    <%= f.label :name, "Nom de la mission" %><br />
                    <%= f.text_field :name, class: "form-control form-control-lg" %>
                    </div><br />
                    <div class="field">
                      <%= f.label :description, "Description" %><br />
                      <%= f.text_area :description, class: "form-control form-control-lg" %>
                    </div><br />
                    <div class="field">
                      <%= f.label :due_date, "Date limite" %><br />
                      <%= f.date_field :due_date, class: "form-control form-control-lg" %>
                    </div> 
                  </div>
                </div>
                <br />
                <%= f.fields_for :addresses, @mission_addresses do |address| %>
                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                      <%= address.label :street_name_1, "N° et nom de voie" %><br />
                      <%= address.text_field :street_name_1, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="field">
                      <%= address.label :street_name_2, "Complément d'adresse" %><br />
                      <%= address.text_field :street_name_2, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="field">
                      <%= address.label :postal_code, "Code postal" %><br />
                      <%= address.text_field :postal_code, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="field">
                      <%= address.label :city, "Ville" %><br />
                      <%= address.text_field :city, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                </div>
                 
          
                <div class="actions">
                  <%= f.submit "Valider les changements", class: "btn-update btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
                <% end %>
                <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div><!-- END: body-wrap -->



