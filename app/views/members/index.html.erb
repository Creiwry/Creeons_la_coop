<div class="widget mt-4">
    <div class="row-wrapper">
        <div class="row cols-md-space cols-sm-space cols-xs-space">
             <% @members.each do |member| %>
            <div class="col-lg-4 mb-2">
                <div class="block block--style-3">
                    <div class="profile-picture profile-picture--style-2">
                        <img src="../../assets/images/prv/people/person-1.jpg" >
                    </div>
                    <div class="block-body text-center">
                        <h3 class="heading heading-6 strong-600 mb-0 mb-0">
                            <%= member.first_name %> <%= member.last_name %>    
                        </h3><br />
                        <h3 class="heading heading-light heading-sm strong-300">
                            <%= member.email %>    
                        </h3>
                        <h3 class="heading heading-light heading-sm strong-300"><%= member.phone_number %></h3>
                        <h3 class="heading heading-light heading-sm strong-300">Ville</h3>

                         <%= link_to "Voir Membre", member_path(member.id), class: "btn btn-base-1 btn-shadow btn-circle px-4 mt-2" %>
                    </div>
                </div>
            </div>
             <% end %>
        </div>
    </div>
</div>
