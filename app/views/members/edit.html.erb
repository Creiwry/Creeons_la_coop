<div class="body-wrap">
	<section class="slice sct-color-2">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8">
					<div class="card form-card form-card--style-1">
						<div class="form-header text-center">
							<div class="profile-picture profile-picture--style-2">
								<% if @member.avatar.attached? %>
									<%= image_tag @member.avatar.variant(resize: '140x140').processed %>
									<% else %>
									<img src="https://image.flaticon.com/icons/svg/0/93.svg" class="profil-img">
								<% end %>
							</div>
						</div>

						<div class="form-body">
							<div class="text-center px-2">
								<h4 class="heading heading-4 strong-400 mb-0"><h2>Modifier le profil</h2></h4>
							</div>

							<div class="form-default mt-4" >
								<%= form_with model: @member, local: true do |form| %>
								<div class="col">
									<div class="col-lg-12">
										<div class="field">
											<%= form.label :email, "E-mail" %><br />
											<%= form.text_field :email, class: "form-control form-control-lg" %>
										</div>
										<br/>

										<div class="field">
											<%= form.label :first_name, "Prénom" %>
											<br />
											<%= form.text_field :first_name, class: "form-control form-control-lg" %>
										</div>
										<div class="field">
											<%= form.label :last_name, "Nom" %>
											<br />
											<%= form.text_field :last_name, class: "form-control form-control-lg" %>
										</div>
										<br>

										<div class="field">
											<%= form.label :phone_number, "Numéro de téléphone" %>
											<br />
											<%= form.text_field :phone_number, class: "form-control form-control-lg" %>
										</div>
										<br />

										<div class="field">
											<%= form.label :avatar, "Ajouter une photo de profil" %><br />
											<%= form.file_field(:avatar, key: "avatar", accept: 'image/gif, image/png, image/jpeg', class: "btn-base-1") %>
										</div>

										<div class="field">
											<%= form.label :biography, "Présentation" %>
											<%= form.hidden_field :biography, class:'form-control' %>
											<trix-editor input="member_biography"></trix-editor>
										</div>
										
									</div>
								</div>
								<br />
								<%= form.fields_for :address, @member.address do |address| %>
								<div class="col">
									<div class="col-lg-12">
										<div class="field">
											<%= address.label :postal_code, "Code postal" %><br />
											<%= address.text_field :postal_code, class: "form-control form-control-lg" %>
										</div>
									</div>
									<div class="col-lg-12">
										<div class="field">
											<%= address.label :city, "Ville" %><br />
											<%= address.text_field :city, class: "form-control form-control-lg" %>
										</div>
									</div>
									<div class="col-lg-12">
										<div class="field">
											<%= address.label :street_name_1, "n° et nom de voie" %><br />
											<%= address.text_field :street_name_1, class: "form-control form-control-lg" %>
											
										</div>
									</div>
									<div class="col-lg-12">
										<div class="field">
											<%= address.label :street_name_2, "Complément d'adresse" %><br />
											<%= address.text_field :street_name_2, class: "form-control form-control-lg" %>
										</div>

									</div>
								</div>
								<div class="actions">
									<%= form.submit "Sauvegarder les changements", class: "btn-update btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
								</div><br />
								<% end %>
								<% end %>
							</div>
							<%= link_to  "Modifier votre mot de passe", edit_member_registration_path, class: "btn-cancel btn btn-styled btn-lg btn-block btn-danger mt-4"%>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div><!-- END: body-wrap -->

