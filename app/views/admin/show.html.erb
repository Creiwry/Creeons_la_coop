<div class="col-lg-12 mb-5">
    <div class="main-content">
        <div class="page-title">
            <div class="row align-items-center">
                <div class="col-lg-12 col-12">
                    <h2 class="heading-missions heading heading heading-2 text-uppercase border-bottom border-dark strong-800 mt-5 mb-5">Membre</h2>
                </div>
            </div>
        </div>
        <!-- Order history table -->
        <div class="card no-border">
            <div>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>nom</th>
                            <th>email</th>
                            <th>tel</th>
                            <th>date de creation</th>
                            <th>role</th>
                            <th><!-- Btn Show --></th>
                        </tr>
                    </thead>
                    <!-- Faire each pour missions -->
                    <tbody>
                    	<% Member.all.each do |t| %>
                        <tr>
                            <td><%=  t.first_name %> <%=  t.last_name %></td>
                            <td><%=  t.email %></td>
                            <td><%=  t.phone_number %></td>
                            <td><%=  time_tag(t.created_at) %></td>
                            <td><%=  t.role %></td>
                            <td>
                                <a href="/members/<%= t.id%>" class="btn btn-dark">Voir</a>
                                <a href="/members/<%= t.id%>/edit" class="btn btn-dark">Editer</a>
                                <%if t.id != current_member.id%>
	                                <form action="admin/delete/member/<%= t.id%>" method="post">
	                                	<input name="authenticity_token" type="hidden" value="token_value">
	                                	<button class="btn btn-dark">Suprimer</button>
	                            	</form>
	                            	<% if t.role != "membre"%>
	                                	<form action="admin/role/member/<%= t.id%>" method="post">
	                                		<input name="authenticity_token" type="hidden" value="token_value">
	                                		<button class="btn btn-dark">passer en MEMBRE</button>
	                                	</form>
	                            	<% end %>
	                            	<% if t.role != "admin"%>
	                                	<form action="admin/role/admin/<%= t.id%>" method="post">
	                                		<input name="authenticity_token" type="hidden" value="token_value">
	                                		<button class="btn btn-dark">passer en ADMIN</button>
	                                	</form>
	                            	<% end %> 
	                            	<% if t.role != "super_admin"%>
	                                	<form action="admin/role/super-admin/<%= t.id%>" method="post">
	                                		<input name="authenticity_token" type="hidden" value="token_value">
	                                		<button class="btn btn-dark">passer en SUPER-ADMIN</button>
	                                	</form>
	                            	<% end %>
                            	<% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="page-title">
            <div class="row align-items-center">
                <div class="col-lg-12 col-12">
                    <h2 class="heading-missions heading heading heading-2 text-uppercase border-bottom border-dark strong-800 mt-5 mb-5">info</h2>
