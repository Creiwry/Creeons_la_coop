	                            <form action="admin/delete/mission/<%= mission.id%>" method="post">                            	
                                <a href="/missions/<%= mission.id%>" class="btn btn-base-1 ">Voir</a>
                                <a href="/missions/<%= mission.id%>/edit" class="btn btn-base-1 ">Editer</a>
	                                <input name="authenticity_token" type="hidden" value="token_value">
	                                <button class="btn btn-danger mt-2 ml-3">Suprimer</button><br />
	                           	</form>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="page-title">
            <div class="row align-items-center">
                <div class="col-lg-12 col-12">
                    <h2 class="heading-missions heading heading heading-2 text-uppercase border-bottom border-dark strong-800 mt-5 mb-5">productors</h2>
                </div>
            </div>
        </div>
        <!-- Order history table -->
        <div class="card no-border">
            <div>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>nom</th>
                            <th>description</th>
                            <th>tel</th>
                            <th>date de creation</th>
                            <th><!-- Btn Show --></th>
                        </tr>
                    </thead>
                    <tbody>
                    	<% @productors.each do |productor| %>
                        <tr>
                            <td><%=  productor.name %></td>
                            <td><%=  productor.description %></td>
                            <td><%=  productor.phone_number %></td>
                            <td><%=  time_tag(productor.created_at) %></td>
                            <td>	                            
                            	<form action="admin/delete/productor/<%= productor.id%>" method="post">
                               <a href="/productors/<%= productor.id%>" class="btn btn-base-1 ">Voir</a>
                                <a href="/productors/<%= productor.id%>/edit" class="btn btn-base-1 ">Editer</a>
	                                <input name="authenticity_token" type="hidden" value="token_value">
	                                <button class="btn btn-danger">Suprimer</button><br />
	                           	</form>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>