<div class="col-lg-12 mb-5">
    <div class="main-content">
        <div class="page-title">
            <div class="row align-items-center">
                <div class="col-lg-12 col-12">
                    <h2 class="heading-missions heading heading heading-2 text-uppercase border-bottom border-dark strong-800 mt-5 mb-5">Membre</h2>
                </div>
            </div>
        </div>
        <!-- Order history table -->
        <div class="card no-border">
            <div>
                <table class="table table-sm table-hover ">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Tel</th>
                            <th>Cr√©er le</th>
                            <th>Role</th>
                            <th><!-- Btn Show --></th>
                        </tr>
                    </thead>
                    <!-- Faire each pour missions -->
                    <tbody>
                    	<% Member.all.each do |t| %>
                        <tr>
                            <td><%=  t.first_name %> <%=  t.last_name %></td>
                            <td><%=  t.email %></td>
                            <td><%=  t.phone_number %></td>
                            <td><%=  time_tag(t.created_at) %></td>
                            <td><%=  t.role %> </td>
                            <td>                               
                            	<%if t.id != current_member.id%>
                            	<form action="admin/delete/member/<%= t.id%>" method="post" class="mt-5">
                            	<% end %>
                                <a href="/members/<%= t.id%>" class="btn btn-base-1 ">Voir</a>
                                <a href="/members/<%= t.id%>/edit" class="btn btn-base-1 ">Editer</a>
                                <%if t.id != current_member.id%>
	                                	<input name="authenticity_token" type="hidden" value="token_value">
	                                	<button class="btn btn-danger">Suprimer</button>
	                            	</form>
                                    <br />

	                            	<% if t.role != "membre"%>
	                                	<form action="admin/role/membre/<%= t.id%>" method="post">
	                                		<input name="authenticity_token" type="hidden" value="token_value">
	                                		<button class="btn btn-outline-danger">passer en MEMBRE</button>
	                                	</form>
                                        <br />
	                            	<% end %>
	                            	<% if t.role != "admin"%>
	                                	<form action="admin/role/admin/<%= t.id%>" method="post">
	                                		<input name="authenticity_token" type="hidden" value="token_value">
	                                		<button class="btn btn-outline-danger">passer en ADMIN</button>
	                                	</form>
                                        <br />
	                            	<% end %> 
	                            	<% if t.role != "super-admin"%>
	                                	<form action="admin/role/super-admin/<%= t.id%>" method="post">
	                                		<input name="authenticity_token" type="hidden" value="token_value">
	                                		<button class="btn btn-outline-danger">passer en SUPER-ADMIN</button>
	                                	</form>
	                            	<% end %>
                            	<% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <hr class="mt-0 mb-0">
            </div>
        </div>
