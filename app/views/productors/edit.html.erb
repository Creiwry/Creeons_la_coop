<div class="body-wrap">
  <section class="slice sct-color-2">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card form-card form-card--style-1">
            <div class="form-header text-center">
              <div class="profile-picture profile-picture--style-2">
                <% if @productor.avatar.attached? %>
                  <%= image_tag @productor.avatar.variant(resize: '140x140').processed %>
                  <% else %>
                  <img src="https://image.flaticon.com/icons/svg/0/93.svg" class="profil-img">
                <% end %>
              </div>
            </div>
            <div class="form-body">
              <div class="text-center px-2">
                <h4 class="heading heading-4 strong-400 mb-0"><h2>Editer Producteur</h2></h4>
              </div>

              <div class="form-default mt-4" >

                <%= form_with model: @productor, local:true do |f| %>
                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                        <%= f.label :name, "Nom du producteur" %><br />
                        <%= f.text_field :name, class: "form-control form-control-lg" %><br />
                    </div>
                    <div class="field">
                      <%= f.label :description, "Description" %><br />
                      <%= f.text_area :description, class: "form-control form-control-lg" %><br />
                    </div>
                    <div class="field">
                      <%= f.label :phone_number, "Numéro de téléphone" %><br />
                      <%= f.text_field :phone_number, class: "form-control form-control-lg" %><br />
                    </div> 
                    <div class="field">
                      <%= f.label :avatar, "Photo de profil" %><br />
                      <%= f.file_field :avatar, class: "btn-base-1" %><br />
                    </div> 
                  </div>
                </div>
                <br />
                <%= f.fields_for :address, @productor_address do |address| %>
                <div class="col">
                  <div class="col-lg-12">
                    <div class="field">
                        <%= address.label :street_name_1, "n° et nom de voie" %><br />
                        <%= address.text_field :street_name_1, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="field">
                      <%= address.label :street_name_2, "Complément d'adresse" %><br />
                      <%= address.text_field :street_name_2, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="field">
                      <%= address.label :city, "Ville" %><br />
                      <%= address.text_field :city, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="field">
                      <%= address.label :postal_code, "Code Postal" %><br />
                      <%= address.text_field :postal_code, class: "form-control form-control-lg" %><br />
                    </div>
                  </div>
                </div>
                <div class="actions">
                  <%= f.submit "Sauvegarder les changements", class: "btn-update btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
                </div>
                <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div><!-- END: body-wrap -->



