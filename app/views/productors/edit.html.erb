<h1>Productors#edit</h1>
<p>Find me in app/views/productors/edit.html.erb</p>

<%= form_with model: @productor, local:true do |f| %>
<%= f.label :name, "Nom du producteur" %>
<%= f.text_field :name %>
<%= f.label :description, "Description" %>
<%= f.text_area :description %>
<%= f.label :phone_number, "Numéro de téléphone" %>
<%= f.text_field :phone_number %>
<%= f.label :avatar %>
<%= f.file_field :avatar %>
<%= f.submit "Sauvegarder les changements", class: "btn btn-primary" %>
<% end %>