<div class="form-default mt-4" >

<%= form_with model: productor, local: true do |f| %>
  <div class="col">
    <div class="col-lg-12">
      <div class="field">
        <%= f.label :name, Productor.human_attribute_name(:name)%><br />
        <%= f.text_field :name, class: "form-control form-control-lg", required: true %><br />
      </div>

      <div class="field ">
        <%= f.label :description, Productor.human_attribute_name(:description)%><br />
        <%= f.hidden_field :description %><br />
        <trix-editor input="productor_description"></trix-editor>
      </div>

      <div class="field mt-4">
        <%= label_tag translate("main_app.views.productors.edit.type.label",
                               model: Productor.model_name.human) %>
        <br>
        <div class="px-3">
          <%= f.label :local, t("main_app.views.productors.edit.type.local")%>
          <%= f.radio_button :local, true %><br />
          <%= f.label :local, t("main_app.views.productors.edit.type.supplier")%>
          <%= f.radio_button :local, false  %><br /><br />
        </div>
      </div>

      <div class="field">
        <%= f.label :phone_number, Productor.human_attribute_name(:phone_number) %><br />
        <%= f.text_field :phone_number, class: "form-control form-control-lg" %><br />
      </div> 

      <div class="field">
        <%= f.label :website_url, Productor.human_attribute_name(:website_url) %><br />
        <%= f.text_field :website_url, class: "form-control form-control-lg" %><br />
      </div>

      <div class="field">
        <%= f.label :avatar, Productor.human_attribute_name(:avatar)%><br />
        <%= f.file_field :avatar, accept: 'image/png, image/gif, image/jpeg', class: "btn" %><br />
      </div> 
      <hr>

      <div class="field">
        <%= f.label :catalogs, Productor.human_attribute_name(:catalogs)%><br />
        <%= f.file_field :catalogs, multiple: true, class: "btn" %><br />
      </div> 
    </div>
  </div>
  <br />

  <%= f.fields_for :address, productor.address do |address_fields| %>
    <%= render 'layouts/address_fields', coordinates: productor.address.coordinates,
                                         f: address_fields %>
  <% end %>
  
  <div class="actions">
    <%= f.submit nil,
      class: "btn-update btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
  </div>
  
<% end %>
