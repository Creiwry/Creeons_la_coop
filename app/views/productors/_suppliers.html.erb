<div class="container">
  <div class="widget mt-4">
    <div class="row-wrapper">
      <% first_category = Productor.category.values.first %>
      <ul class="nav nav-tabs justify-content-center mb-5" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#<%= first_category %>">
            <%= t "enumerize.productor.category.#{first_category}" %>
          </a>
        </li>

        <% Productor.category.values.each do |category| %>
          <% if category != first_category %>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#<%= category %>">
                <%= t "enumerize.productor.category.#{category}" %>
              </a>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>

    <div class="row-wrapper">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id=<%= first_category %> role="tabpanel" aria-labelledby="<%= first_category %>-tab">
          <div class="row cols-md-space cols-sm-space cols-xs-space">
            <%= render partial: "productors",
              locals: { productors: suppliers.select {|productor|
              productor.category == first_category 
            }} %>
          </div>
        </div>

        <% Productor.category.values.each_with_index do |category, index| %>
          <% if category != first_category %>
            <div class="tab-pane fade show" id=<%= category %> role="tabpanel" aria-labelledby="<%= category %>-tab">
              <div class="row cols-md-space cols-sm-space cols-xs-space">
                <%= render partial: "productors",
                  locals: { productors: suppliers.select {|productor|
                  productor.category == category 
                }} %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
