<% productors.each do |productor| %>
<div class="col-lg-4 mb-2">
  <div class="block block--style-3">
    <div class="profile-picture profile-picture--style-1">
      <% if productor.avatar.attached? %>
          <%= image_tag productor.avatar %>
      <% else %>
          <img src="https://image.flaticon.com/icons/svg/0/93.svg">
      <% end %> 
    </div>

    <div class="block-body text-center">
      <h3 class="heading heading-6 strong-600 mb-0 mb-0"><%= productor.name %></h3>
      <br />
      <h3 class="heading heading-light heading-sm strong-300"><%= productor.description %></h3>
      <h3 class="heading heading-light heading-sm strong-300"><%= productor.phone_number %></h3>
      <h3 class="heading heading-light heading-sm strong-300"><%= productor.address.city unless productor.address.nil? %></h3>
                  
      <%= link_to "Voir Producteur", productor_path(productor.id) , class: "btn btn-base-1 btn-shadow btn-circle px-4 mt-2" %>
    </div>
  </div>
</div>
<% end %>