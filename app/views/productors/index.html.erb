<div class="widget mt-4">
	<div class="row-wrapper">
		<div class="row cols-md-space cols-sm-space cols-xs-space">
			<% @productors.each do |productor| %>
			<div class="col-lg-4 mb-2">
				<div class="block block--style-3">
					<div class="profile-picture profile-picture--style-2">
						<img src="https://resize-elle.ladmedia.fr/r/625,,forcex/crop/625,804,center-middle,forcex,ffffff/img/var/plain_site/storage/images/loisirs/sorties/news/madame-claude-mere-maquerelle-et-mythomane/15232741-1-fre-FR/Madame-Claude-mere-maquerelle-et-mythomane.jpg", class="profil-img" >
					</div>

					<div class="block-body text-center">
						<h3 class="heading heading-6 strong-600 mb-0 mb-0">
							<%= productor.name %>
						</h3>
						<br />
						<h3 class="heading heading-light heading-sm strong-300">
							<%= productor.phone_number %>
								
							</h3>
						<h3 class="heading heading-light heading-sm strong-300">
							<%= productor.description %>
								
							</h3>

						<h3 class="heading heading-light heading-sm strong-300">
							<!-- Rajouter City du producteur -->
						</h3>

						<%= link_to "Voir Producteur", productor_path(productor.id) , class: "btn btn-base-1 btn-shadow btn-circle px-4 mt-2" %>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>


