<div class="body-wrap">
  <%= form_with model: @info, local: true do |f| %>
    <section class="slice sct-color-2">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card form-card form-card--style-1">
                        <div class="form-header text-center">
                            <div class="form-header-icon">
                                <i class="fas fa-info fa-3x"></i>
                            </div>
                        </div>
                        <div class="form-body">
                            <div class="text-center px-2">
                                <h4 class="heading heading-3 strong-400 mb-4">Editer l'info</h4>
                            </div>

                            <form class="form-default" role="form">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="field">
                                        	<%= f.label :title, "Titre" %><br />
                                        	<%= f.text_field :title, class: "form-control form-control-lg" %>
                                        </div>
                                      <br />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="field">
                                        	<%= f.label :content, "Contenu" %><br />
                                        	<%= f.text_area :content, class: "form-control form-control-lg" %> 
                                        </div>
                                    </div>
                                </div>
                                <div class="actions">
                                	  <%= f.submit "Valider les changements", class: "btn-sign-in btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
  <% end %>
</div>