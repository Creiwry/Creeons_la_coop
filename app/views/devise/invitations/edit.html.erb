<div class="container d-flex justify-content-center">
  <div>
    <h2 class="mt-2"><%= t "devise.invitations.edit.header" %></h2>

    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <div class="field form-group">
        <%= f.label :first_name, "PrÃ©nom" %>
        <%= f.text_field :first_name, class: "form-control ", required: true %>

        <%= f.label :last_name, "Nom de famille" %>
        <%= f.text_field :last_name, class: "form-control ", required: true %>
      </div>

      <% if f.object.class.require_password_on_accepting %>
        <div class="field form-group">
          <%= f.label :password, "Mot de passe" %><br />
          <%= f.password_field :password, class: "form-control", required: true %>

          <%= f.label :password_confirmation, "Confirmez votre mot de passe" %><br />
          <%= f.password_field :password_confirmation, class: "form-control", required: true %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-base-1 btn-shadow btn-circle my-3" %>
      </div>
    <% end %>
  </div>
</div>