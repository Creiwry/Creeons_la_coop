<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <section class="slice sct-color-2 container">
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <div class="card form-card form-card--style-1">
          <div class="form-header text-center">
            <i class="form-header-icon fas fa-user-lock fa-3x"></i>
          </div>

          <div class="form-body">
            <h4 class="text-center px-2 heading heading-4 strong-400 mb-4">
              Changement du Mot de Passe
            </h4>

            <div class="field">
              <%= f.label :password, "Nouveau mot de passe" %>
              <% if @minimum_password_length %>
                <em class="small">(<%= @minimum_password_length %> caract√®res minimum)</em>
              <% end %>

              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg" %>
            </div>
            <br/>

            <div class="field">
              <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg" %>
            </div>

            <div class="actions">
              <%= f.submit "Changer mon mot de passe", class: "btn-update btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
            </div>
          </div>
        </div>
        <div class="form-user-footer-links pt-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
<% end %>
